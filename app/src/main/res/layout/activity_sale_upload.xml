<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.SaleUploadActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/upload_close_button"
            android:layout_gravity="left"
            android:text="닫기"
            android:background="#00ff0000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <TextView
            android:text="게시글 작성"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <Button
            android:id="@+id/upload_complete_button"
            android:layout_gravity="right"
            android:text="완료"
            android:background="#00ff0000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View style="@style/Divider"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <ImageButton
            android:id="@+id/upload_images_button"
            android:background="@android:color/holo_orange_light"
            android:src="@android:drawable/ic_menu_camera"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="15dp"/>
        <ImageView
            android:id="@+id/upload_image1"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
        <ImageView
            android:id="@+id/upload_image2"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
        <ImageView
            android:id="@+id/upload_image3"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
        <ImageView
            android:id="@+id/upload_image4"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
        <ImageView
            android:id="@+id/upload_image5"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
        <ImageView
            android:id="@+id/upload_image6"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
        <ImageView
            android:id="@+id/upload_image7"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
        <ImageView
            android:id="@+id/upload_image8"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
        <ImageView
            android:id="@+id/upload_image9"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
        <ImageView
            android:id="@+id/upload_image10"
            android:layout_width="100dp"
            android:layout_height="100dp"/>

    </LinearLayout>
    <View style="@style/Divider"/>
    <EditText
        android:id="@+id/upload_title_editText"
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:hint="글 제목"/>
    <View style="@style/Divider"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/upload_cateSelect_button"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:text="업종 선택"
            android:textColor="@android:color/black" />

        <Spinner
            android:id="@+id/industryName"
            android:layout_width="300dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View style="@style/Divider"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/upload_address_EditText"
            android:layout_width="272dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_marginLeft="15dp"
            android:background="@null"
            android:hint="주소를 입력해 주세요" />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/upload_address_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:background="@android:color/holo_orange_light"
            android:text="주소 검색" />
    </LinearLayout>
    <EditText
        android:id="@+id/upload_remainAddress_EditText"
        android:layout_width="272dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:background="@null"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:hint="나머지 주소를 입력해 주세요" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:text="₩"
            android:textSize="25dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <EditText
            android:id="@+id/upload_price_editText"
            android:layout_width="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:inputType="number"
            android:hint="가격 입력"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:text="사업자등록번호"
            android:textSize="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:inputType="number"
            android:layout_height="match_parent"/>
        <EditText
            android:id="@+id/upload_BNumber_editText"
            android:layout_width="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="000-00-00000"/>
    </LinearLayout>
    <View style="@style/Divider"/>

    <EditText
        android:layout_marginLeft="15dp"
        android:id="@+id/upload_contents_editText"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="10dp"
        android:background="@null"
        android:layout_marginRight="15dp"
        android:hint="게시글 내용을 작성해주세요."
        android:gravity="top|start"/>
</LinearLayout>